[colors]
bg = #2E3440
fg = #FFFFFF
green = #50FA7B

[settings]
screenchange-reload = true

[bar/top]

; Use $ xrandr -q | grep " connected" | cut -d ' ' -f1
monitor = LVDS1

width = 1366
height = 19
; offset-x = 10
; offset-y = 10
offset-x = 0
offset-y = 0

fixed-center = false

background = ${colors.bg}
foreground = ${colors.fg}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

; font-0 = Iosevka NF:style=Medium:size=12;3
; font-0 = Iosevka NF:style=Medium:size=11;3
; font-0 = Hack Nerd Font:pixelsize=11:antialias=true:autohint=true
font-0 = Hack Nerd Font:style=Regular:pixelsize=10;3

modules-left = xworkspaces xwindow
modules-right = sensor network volume kbdlayout battery datetime

[module/battery]
type = custom/script
exec = $HOME/scripts/polybar-modules.sh battery
interval = 5

[module/datetime]
type = custom/script
exec = $HOME/scripts/polybar-modules.sh datetime
interval = 5

[module/kbdlayout]
type = custom/script
exec = $HOME/scripts/polybar-modules.sh kbdlayout
interval = 2

[module/network]
type = custom/script
exec = $HOME/scripts/polybar-modules.sh network
interval = 2

[module/sensor]
type = custom/script
exec = $HOME/scripts/polybar-modules.sh sensor
interval = 2

[module/volume]
type = custom/script
exec = $HOME/scripts/polybar-modules.sh volume
interval = 5

[module/xworkspaces]
type = internal/xworkspaces
icon-0 = nogroup;
icon-1 = one;1
icon-2 = two;2
icon-3 = three;3
icon-4 = four;4
icon-5 = five;5
icon-6 = six;6
icon-7 = seven;7
icon-8 = eight;8
icon-9 = nine;9

format = <label-state>

label-active = %icon%
label-active-foreground = ${colors.bg}
label-active-background = ${colors.green}
label-active-padding = 1

label-occupied = %icon%
label-occupied-padding = 1

label-urgent = %icon%
label-urgent-padding = 1

label-empty = %icon%
label-empty-padding = 1

